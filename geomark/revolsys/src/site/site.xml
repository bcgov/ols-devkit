<project
  xmlns="http://maven.apache.org/DECORATION/1.6.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/DECORATION/1.6.0 http://maven.apache.org/xsd/decoration-1.6.0.xsd"
>
  <skin>
    <groupId>lt.velykis.maven.skins</groupId>
    <artifactId>reflow-maven-skin</artifactId>
    <version>1.1.1</version>
  </skin>

  <custom>
    <reflowSkin>
      <absoluteResourceURL>${siteUrl}</absoluteResourceURL>
      <bottomNav maxSpan="0">
        <column>Home</column>
      </bottomNav>
      <brand>
        <name>
          <![CDATA[
          <span class="color-highlight">Revolution Systems Inc</span>]]>
        </name>
        <href>${siteUrl}</href>
      </brand>
      <highlightJs>true</highlightJs>
      <skinAttribution>false</skinAttribution>
      <theme>bootswatch-flatly</theme>
      <toc>top</toc>
      <pages>
        <index project="cpf-parent">
          <titleTemplate>Revolution Systems Inc</titleTemplate>
          <breadcrumbs>false</breadcrumbs>
          <toc>false</toc>
          <markPageHeader>false</markPageHeader>
          <sections>
            <body />
          </sections>
        </index>
        <contribute>
          <breadcrumbs>false</breadcrumbs>
        </contribute>
        <source-repository>
          <highlightJs>false</highlightJs>
        </source-repository>
        <issue-tracking>
          <highlightJs>false</highlightJs>
          <toc>false</toc>
        </issue-tracking>
        <license>
          <highlightJs>false</highlightJs>
          <toc>false</toc>
        </license>
        <project-info>
          <toc>false</toc>
        </project-info>
        <github-report>
          <toc>false</toc>
        </github-report>
        <dependencies>
          <tocTopMax>4</tocTopMax>
        </dependencies>
      </pages>
    </reflowSkin>
  </custom>
  <bannerRight>
    <name>Revolution Systems Inc</name>
    <src>/images/revolsys_50h.png</src>
    <href>https://revolsys.github.io/</href>
  </bannerRight>

  <publishDate
    position="bottom"
    format="yyyy-MMM-dd" />
  <version position="bottom" />

  <body>
    <breadcrumbs>
      <item
        name="Revolsys"
        href="${siteUrl}" />
    </breadcrumbs>

    <menu
      name="Documentation"
      inherit="bottom"
    >
    </menu>

    <menu
      ref="parent"
      inherit="top" />
    <menu
      ref="modules"
      inherit="top" />

    <menu
      name="Contribute"
      inherit="bottom"
    >
      <item
        name="GitHub Project"
        href="${gitHubUrl}" />
      <item
        name="Issues (GitHub)"
        href="${gitHubUrl}/issues/" />
    </menu>

    <menu
      name="Links"
      inherit="top"
    >
    </menu>

    <menu
      name="Maven documentation"
      ref="reports"
      inherit="bottom" />
  </body>

</project>
